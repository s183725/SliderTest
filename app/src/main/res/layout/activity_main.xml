<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mtb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.slider.Slider
        android:id="@+id/coldSlider"
        android:layout_width="255dp"
        android:layout_height="58dp"
        android:stepSize="1.0"
        android:value="20"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:thumbColor="@color/black"
        app:tickVisible="false"
        app:trackColorActive="@color/colorSecondary"
        app:trackHeight="11dp"
        app:values="@array/SliderTest"
         />

    <com.google.android.material.slider.Slider
        android:id="@+id/warmSlider"
        android:layout_width="259dp"
        android:layout_height="48dp"
        android:stepSize="1.0"
        android:value="20"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.383"
        app:thumbColor="@color/black"
        app:tickVisible="false"
        app:trackColorActive="@color/colorPrimary"
        app:trackHeight="11dp"
        app:values="@array/SliderTest"
        mtb:layout_constraintHorizontal_bias="0.815" />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb"
        android:layout_width="368dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        mtb:labels="@array/modes_array"
        mtb:layout_constraintHorizontal_bias="0.500"
        mtb:layout_constraintVertical_bias="0.669"
        mtb:mtbMultipleChoice="false"
        mtb:mtbRoundedCorners="true"
        mtb:mtbScrollable="false"
        mtb:mtbSelectFirstItem="true"
        mtb:mtbCornerRadius="32dp"
        mtb:mtbColorPressedText="@color/white"
        mtb:mtbColorUnpressedText="@color/white"
        mtb:mtbPressedColor="@color/colorPrimaryDark"
        mtb:mtbUnpressedColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="102dp"
        android:layout_height="127dp"
        app:srcCompat="@drawable/sunthing"
        mtb:layout_constraintBottom_toBottomOf="parent"
        mtb:layout_constraintEnd_toEndOf="parent"
        mtb:layout_constraintHorizontal_bias="0.022"
        mtb:layout_constraintStart_toStartOf="parent"
        mtb:layout_constraintTop_toTopOf="parent"
        mtb:layout_constraintVertical_bias="0.37"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/AppTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/slideText"
        android:layout_width="123dp"
        android:layout_height="53dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.275" />

</androidx.constraintlayout.widget.ConstraintLayout>