<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:mtb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.slider.Slider
        android:id="@+id/coldSlider"
        android:layout_width="255dp"
        android:layout_height="58dp"
        android:alpha="0.3"
        android:stepSize="1.0"
        android:value="20"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.699"
        app:thumbColor="@color/black"
        app:tickVisible="false"
        app:trackColorActive="@color/colorSecondary"
        app:trackHeight="11dp"
        app:values="@array/SliderTest" />

    <com.google.android.material.slider.Slider
        android:id="@+id/warmSlider"
        android:layout_width="255dp"
        android:layout_height="47dp"
        android:alpha="0.3"
        android:stepSize="1.0"
        android:value="20"
        android:valueFrom="0"
        android:valueTo="100"
        app:labelBehavior="gone"
        app:layout_constraintBottom_toTopOf="@+id/coldSlider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.756"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.967"
        app:thumbColor="@color/black"
        app:tickVisible="false"
        app:trackColorActive="@color/colorPrimary"
        app:trackHeight="11dp"
        app:values="@array/SliderTest"
        mtb:layout_constraintHorizontal_bias="0.815" />

    <com.sha.kamel.multitogglebutton.MultiToggleButton
        android:id="@+id/mtb"
        android:layout_width="368dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.781"
        mtb:labels="@array/modes_array"
        mtb:layout_constraintHorizontal_bias="0.500"
        mtb:layout_constraintVertical_bias="0.869"
        mtb:mtbColorPressedText="@color/white"
        mtb:mtbColorUnpressedText="@color/white"
        mtb:mtbCornerRadius="32dp"
        mtb:mtbMultipleChoice="false"
        mtb:mtbPressedColor="@color/colorPrimaryDark"
        mtb:mtbRoundedCorners="true"
        mtb:mtbScrollable="false"
        mtb:mtbSelectFirstItem="true"
        mtb:mtbUnpressedColor="@color/colorPrimary" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="102dp"
        android:layout_height="127dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/warmSlider"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615"
        app:srcCompat="@drawable/sunthing" />

    <TextView
        android:id="@+id/slideText"
        android:layout_width="351dp"
        android:layout_height="82dp"
        android:gravity="center"
        android:text="0"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <View
        android:id="@+id/view"
        android:layout_width="381dp"
        android:layout_height="324dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

</androidx.constraintlayout.widget.ConstraintLayout>